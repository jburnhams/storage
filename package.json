{
  "name": "js-fullstack-template",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "npm run generate:frontend",
    "deploy": "wrangler deploy",
    "dev": "wrangler dev",
    "generate:frontend": "node ./scripts/embed-frontend.mjs",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "npm run test:unit:backend && npm run test:unit:frontend",
    "test:unit:backend": "vitest run --config vitest.config.backend.ts",
    "pretest:unit:backend": "npm run generate:frontend",
    "test:unit:frontend": "vitest run --config vitest.config.frontend.ts",
    "test:integration": "vitest run --config vitest.config.integration.ts",
    "pretest:integration": "npm run generate:frontend",
    "test:coverage": "npm run test:coverage:unit && npm run test:coverage:integration",
    "test:coverage:unit": "npm run test:coverage:unit:backend && npm run test:coverage:unit:frontend",
    "test:coverage:unit:backend": "vitest run --config vitest.config.backend.ts --coverage",
    "test:coverage:unit:frontend": "vitest run --config vitest.config.frontend.ts --coverage",
    "test:coverage:integration": "vitest run --config vitest.config.integration.ts --coverage"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.5.3",
    "@hono/zod-openapi": "^0.19.10",
    "hono": "^4.11.2",
    "jszip": "^3.10.1",
    "node-stdlib-browser": "^1.3.1",
    "playwright": "^1.57.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.10.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.11.0",
    "@cloudflare/workers-types": "^4.20251109.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-istanbul": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild": "^0.27.1",
    "jsdom": "^27.1.0",
    "miniflare": "^4.20251105.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vitest": "^3.2.4",
    "wrangler": "^3.105.1"
  }
}
